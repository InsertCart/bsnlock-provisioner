<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Main app theme -->
    <style name="Theme.EmiLockProvisioner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#1A1A2E</item>
        <item name="colorPrimaryVariant">#16213E</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#7EB2FF</item>
        <item name="android:statusBarColor">#1A1A2E</item>
    </style>

    <!-- Full-screen theme for provisioning activity (no action bar, dark background) -->
    <style name="Theme.EmiLockProvisioner.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">#1A1A2E</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">#1A1A2E</item>
        <item name="android:navigationBarColor">#1A1A2E</item>
    </style>
